<% layout('layouts/orderTemplate') %>
<div class="card bg-warning col-12 mb-3 date-info-card">
	<div class="card-body">
		<button type="button" class="btn-close float-end mb-3 btn-close-date
		aria-label="Close" ></button>
		<p class="card-text text-center">
			All orders are pick up only.<br />The date selected will be the date that you will pick up your order.<br />
			Thank you, Chef Vickys Kitchen
		</p>
	</div>
</div>
<div class="col-lg-8 col-12 offset-lg-2">
	<h1 class="mb-3">Select delivery day</h1>
	<form action="/cart/add/date" method="POST">
		<div class="card mb-3 text-center">
			<div class="card-body">
				<h5 class="card-title mb-3">Select order date</h5>
				<div class="input-group d-flex justify-content-center mb-3">
					<input type="date" name="deliveryDate" min="<%= minDate %>" />
				</div>
				<div class="d-flex flex-row justify-content-end mt-3">
					<button class="btn btn-primary btn-md">Continue</button>
				</div>
			</div>
		</div>
	</form>
</div>

<header>
	<nav class="navbar navbar-dark bg-dark px-2">
		<div class="container-md">
			<a class="navbar-brand" href="/">Chef Vickys Kitchen</a>
			<div class="navbar-nav d-flex flex-md-row flex-sm-wrap">
				<div class="me-3">
					<% if(!startOrder) {%>
					<form action="/order/start" class="formStartOrder" method="POST">
						<a class="nav-link text-white fw-bold btnStartOrder" href="#"
							>START YOUR ORDER</a
						>
					</form>
					<% } else{%>
					<form action="/order/end" class="formEndOrder" method="POST">
						<a class="nav-link text-white fw-bold btnEndOrder" href="#"
							>Cancel Order</a
						>
					</form>
					<% } %>
				</div>
				<% if(!currentUser) { %>
				<div class="me-2">
					<a href="/login" class="btn btn-light btn-md">Login</a>
				</div>

				<div class="me-2">
					<a href="/register" class="btn btn-dark btn-md">Sign Up</a>
				</div>

				<%} else { %>
				<a class="nav-link" href="/logout">Logout</a>
				<% } %>
			</div>
		</div>
	</nav>
</header>
<% if(!startOrder){ %>
<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom mb-3">
	<div class="container-md justify-content-end">
		<button
			class="navbar-toggler"
			type="button"
			data-bs-toggle="collapse"
			data-bs-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<div class="me-2 border-end border-start px-2">
					<a class="nav-link" href="/cart/menu">Menu</a>
				</div>
				<div class="navbar-nav">
					<% if(currentUser){ %>
					<div class="me-2 border-end pe-2">
						<a class="nav-link" href="/order/history">Orders</a>
					</div>
					<% } %>
				</div>
				<div class="navbar-nav">
					<% if(currentUser){ %>
					<div class="me-2 border-end pe-2">
						<a class="nav-link" href="/profile">Profile</a>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
</nav>
<% } %>

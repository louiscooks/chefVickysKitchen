<% layout('layouts/admintemplate') %>
<div class="col-4 offset-3">
	<h1>Login</h1>
	<form action="/login" method="POST" class="needs-validation" novalidate>
		<div class="mb-3">
			<label class="form-label" for="username">Username</label>
			<input
				class="form-control"
				type="text"
				name="username"
				id="username"
				required
			/>
		</div>
		<div class="mb-3">
			<label class="form-label" for="password">Password</label>
			<input
				class="form-control"
				type="password"
				name="password"
				id="password"
				required
			/>
		</div>
		<button class="btn btn-success" name="action" value="adminBtn">
			Login
		</button>
	</form>
</div>

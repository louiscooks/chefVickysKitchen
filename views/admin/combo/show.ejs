<% layout('layouts/admintemplate') %>
<div class="col-6 offset-3">
	<div class="mb-3">
		<a href="/product/">Back to Combos</a>
	</div>
	<div class="card">
		<div class="card-body">
			<h5 class="card-title"><%= combo.name %></h5>
			<p class="card-text mb-2">Combo Product(s):</p>
			<ul style="list-style-type: none">
				<% for(let comboProduct of combo.products) {%>
				<li><%= comboProduct.name %></li>
				<% } %>
			</ul>
			<span class="fw-bold">Unit price:</span> $<%= combo.price %>
			<div class="mt-3">
				<a href="/combo/<%= combo.id %>/edit" class="btn btn-primary">Edit</a>
				<form
					class="d-inline mt-2"
					action="/combo/<%= combo._id %>?_method=DELETE"
					method="POST"
				>
					<button class="btn btn-danger">Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>

<% layout('layouts/admintemplate') %>
<div class="col-lg-8 col-12 offset-lg-2 mb-3">
	<div class="card">
		<div class="card-body">
			<h1>Create Products</h1>
			<form action="/product/add" method="POST" enctype="multipart/form-data">
				<div class="row ">
				<div class="col-12">
				<label for="name" class="form-label">Product Name</label>
				<div class="input-group mb-3">
					<input
						name="product[name]"
						id="name"
						type="text"
						class="form-control"
						placeholder="Enter name"
						aria-label="Product name"
					/>
				</div>
			</div>
			<div class="col-lg-6 col-md-12">
				<label for="num" class="form-label">Unit Price</label>
				<div class="input-group mb-3">
					<span class="input-group-text">$</span>
					<input
						id="num"
						name="product[price]"
						type="text"
						class="form-control"
						aria-label="Amount (to the nearest dollar)"
					/>
				</div>
			</div>
				<div class="col-lg-6 col-md-12 mb-3">
				<label for="form-file" class="form-label">Upload Image</label>
					<input type="file" name="image" id="form-file" class="form-control">
			</div>
				<div class="col-12 mb-3">
					<label for="combo" class="form-label">Add To Combo</label>
					<select
						class="form-select"
						id="combo"
						name="product[combo]"
						aria-label="Default select example"
					>
						<option selected class="text-muted">Select a Day...</option>
						<% for(let day of days) {%> 		
						<option value="<%= day %>"><%= day %></option>
					<% } %> 
					</select>
				</div>
			</div>
				<div class="col-12">
				<div class="input-group mb-3">
					<label class="form-label" for="ingredients"
							>Product Ingredients</label
						>
					<textarea
					id="ingredients"
						name="product[ingredients]"
						class="form-control"
						aria-label="With textarea"
						placeholder="Product description"
					></textarea>
				</div>
			</div>
				<div class="text-center">
					<button class="btn btn-success">Create Product</button>
				</div>
			</div>
			</form>
		</div>
	</div>
</div>

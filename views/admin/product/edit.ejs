<% layout('layouts/admintemplate') %>
<div class="col-lg-8 col-12 offset-lg-2 mb-3">
	<div class="card">
		<div class="card-body">
			<h1>Edit Product</h1>
			<form
				action="/product/<%= product._id %>/edit?_method=PUT"
				method="POST"
				enctype="multipart/form-data"
				novalidate
				class="needs-validation"
			>
				<div class="row">
					<div class="col-12">
						<label class="form-label" for="name">Product Name</label>
						<div class="input-group mb-3">
							<input
								class="form-control"
								type="text"
								value="<%= product.name %>"
								name="product[name]"
								id="name"
								required
							/>
						</div>
					</div>
					<div class="col-12">
						<label class="form-label" for="price">Price</label>
						<div class="input-group mb-3">
							<span class="input-group-text">$</span>
							<input
								class="form-control"
								type="text"
								value="<%= product.price%>"
								name="product[price]"
								id="price"
								required
							/>
						</div>
					</div>
					<div class="col-md-6 col-12 mb-3">
						<label for="">Current Image</label>
						<div>
							<img
								src="<%= product.image.url %>"
								class="img-fluid"
								style="width: 100%; height: 20rem"
								alt=""
							/>
						</div>
					</div>
					<div class="col-md-6 col-12">
						<label class="form-label" for="image">Replace Image</label>
						<div class="input-group mb-3">
							<input type="file" name="image" id="" />
						</div>
					</div>
					<div class="col-12 mb-3">
						<label for="combo" class="form-label">Add To Combo</label>
						<select
							class="form-select"
							id="combo"
							name="product[combo]"
							aria-label="Default select example"
						>
							<option selected class="text-muted">Select a Day...</option>
							<% for(let day of days) {%> 		
								<option value="<%= day %>" <%= product.combo === day? 'selected': '' %> ><%= day %></option>
							<% } %> 
						</select>
					</div>
					<div class="col-12">
						<label class="form-label" for="ingredients"
							>Product Ingredients</label
						>
						<div class="input-group mb-3">
							<textarea
								class="form-control"
								type="text"
								name="product[ingredients]"
								id="ingredients"
								required
							>
<%= product.ingredients %></textarea
							>
						</div>
					</div>
					<div class="text-center">
						<a
							class="btn btn-danger mb-3"
							href="/product/<%= product._id %>/view"
							>Cancel</a
						>
						<button class="btn btn-success mb-3">Update product</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

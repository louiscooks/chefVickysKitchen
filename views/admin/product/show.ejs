<% layout('layouts/admintemplate') %>
<div class="col-lg-6 col-12 offset-lg-3 mb-3">
	<div class="mb-3">
		<a href="/product">Back to Products</a>
	</div>
	<div class="card mb-3">
		<img
			src="<%= product.image.url %>"
			class="card-img-top img-fluid"
			alt="..."
		/>
		<div class="card-body">
			<h5 class="card-title"><%= product.name %></h5>
			<p class="card-text">
				<%= product.ingredients %><br /><span class="text-dark fw-bold"
					>Unit price:</span
				>
				$<%= product.price %>
			</p>
			<a href="/product/<%= product.id %>/edit" class="btn btn-primary">Edit</a>
			<form
				class="d-inline mt-2"
				action="/product/<%= product._id %>?_method=DELETE"
				method="POST"
			>
				<button class="btn btn-danger">Delete</button>
			</form>
		</div>
	</div>
</div>
